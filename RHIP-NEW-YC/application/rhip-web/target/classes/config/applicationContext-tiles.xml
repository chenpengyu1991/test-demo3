<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
           
	<!-- Tiles2 define -->
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.UrlBasedViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.tiles2.TilesView" />
	</bean>
	<bean id="tilesConfigurer"
		class="org.springframework.web.servlet.view.tiles2.TilesConfigurer">
		<property name="definitions">
			<list>
				<value>classpath:config/ehr-tiles-def.xml</value>
				<value>classpath:config/mdm-tiles-def.xml</value>
				<value>classpath:config/idm-tiles-def.xml</value>
                <value>classpath:config/vaccine-tiles-def.xml</value>
                 <value>classpath:config/cdm-tiles-def.xml</value>
                 <value>classpath:config/hm-tiles-def.xml</value>
                 <value>classpath:config/he-tiles-def.xml</value>
                 <value>classpath:config/portal-tiles-def.xml</value>
                 <value>classpath:config/oh-tiles-def.xml</value>
                 <value>classpath:config/ism-tiles-def.xml</value>
                 <value>classpath:config/ep-tiles-def.xml</value>
                <value>classpath:config/mhm-tiles-def.xml</value>
                <value>classpath:config/hsa-tiles-def.xml</value>
                <value>classpath:config/dmbc-tiles-def.xml</value>  
                <value>classpath:config/dref-tiles-def.xml</value>
                <value>classpath:config/ihm-tiles-def.xml</value>
                <value>classpath:config/scheduling-tiles-def.xml</value>
                <value>classpath:config/fdm-tiles-def.xml</value>
                <value>classpath:config/da-tiles-def.xml</value>
                <value>classpath:config/ech-tiles-def.xml</value>
                <value>classpath:config/sr-tiles-def.xml</value>
                <value>classpath:config/ce-tiles-def.xml</value>
                <value>classpath:config/pam-tiles-def.xml</value>
                <value>classpath:config/lda-tiles-def.xml</value>
                <value>classpath:config/finance-tiles-def.xml</value>
                <value>classpath:config/uthealth-tiles-def.xml</value>
                <value>classpath:config/phsr-tiles-def.xml</value>
                <value>classpath:config/ncp-tiles-def.xml</value>
                <value>classpath:config/management-tiles-def.xml</value>
            </list>
		</property>
	</bean>
</beans>