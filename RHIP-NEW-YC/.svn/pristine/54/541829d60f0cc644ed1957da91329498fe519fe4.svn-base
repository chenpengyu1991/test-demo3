<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <display-name>rhip</display-name>
    <!-- contextConfigLocation -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:config/applicationContext*.xml,classpath:config/jdbc-access.xml</param-value>
    </context-param>

    <!-- Reads request input using UTF-8 encoding -->
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--不用cas-->
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.founder.rhip.ehr.filter.LoginFilter</filter-class>
        <init-param>
            <param-name>checkSessionKey</param-name>
            <param-value>currentUser;currentPatient</param-value>
        </init-param>
        <init-param>
            <param-name>redirectURL</param-name>
            <param-value>/access/index</param-value>
        </init-param>

        <init-param>
            <param-name>logoutURL</param-name>
            <param-value>/access/logout</param-value>
        </init-param>

        <init-param>
            <param-name>notCheckURLList</param-name>
            <param-value>/user/portalRegist;/loginFromPortal;/personRecord/createCoverFromApp;/primaryCare/personRecord/hasEHR;/primaryCare/personRecord/addPersonRecordIni;/showImage/showPortalImage;/auth/check;/access/index;/access/login;/access/plogin;/access/inputName;/access/empiId;/cdm/reportcard/hospitalreport;/personalReport/explorer;/idm/report/report;/external/report/main;/referral/explorer;/referral/edit;/dref/getPersonInfo;/dref/save;/mdmOrganization/organationTree;/mdmOrganization/getDeptList;/mdmOrganization/organationSelect;/organization/json;/staffPush/push;/portalAccount/createAccount;/primaryCare/cdm/needHmCard;/primaryCare/cdm/addFollowUp;/primaryCare/cdm/needFollowup;
            </param-value>
        </init-param>

        <init-param>
            <param-name>prefixList</param-name>
            <param-value>.css;.js;.jpg;.gif;.png;htm;.eot;.woff2;.woff;.ttf;.svg;</param-value>
        </init-param>

    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
