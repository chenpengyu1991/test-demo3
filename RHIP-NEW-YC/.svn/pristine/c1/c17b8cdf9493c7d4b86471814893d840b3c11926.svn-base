@charset "utf-8";
/* CSS Document */

.report_content i {left: 50%;text-align: center; background: none; font-size: 16px; font-weight: bold; height: 55px;}
.report_content span {font-size: 12px; font-weight: normal;}

.repost_table th , .repost_table td {height:26px;line-height:26px;padding:0 5px;}
/*background-color:#E8F2FF*/
.repost_table th {border-right:1px solid #A9C3D0;width:110px;text-align:right;font-weight:normal;}
.repost_table td input[type="text"] {border:none;border-bottom:1px solid #000;width:75%;}
.repost_table td textarea {border:none;border-bottom:1px solid #000;width:75%;}

.report_div fieldset {text-align: left; padding: 0; margin-bottom:10px;padding:5px;}
.report_div fieldset legend {margin-left:10px;padding:0 5px;color:#404040;}

/*-----fxk-----*/
i.fxk{list-sytle:none;vertical-align:middle;display:block;padding:0;height:auto;}
i.fxk li{float:left; list-style:none;display:block;margin-right:5px;}
i.fxk input{height:13px;float:left;margin-top:2px;margin-right:2px;}
i.fxk span{display:block;float:left;line-height:20px;}
i.fxk input[type="text"]{width:50%;}